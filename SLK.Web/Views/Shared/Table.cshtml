@using SLK.Web.Helpers
@model SLK.Web.Models.ListModel

<div class="portlet light portlet-fit portlet-datatable bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject font-dark sbold uppercase">@R(ViewBag.Title)</span>
        </div>

        @if (Model.AddNewForm != null)
        {
            <div class="actions">
                <div class="btn-group">
                    <button id="sample_editable_1_new" class="btn sbold green add-popup" data-toggle="modal-extended" href="#add_new">
                        @R("Add New")
                        <i class="fa fa-plus"></i>
                    </button>
                </div>
            </div>
            @Html.Partial("~/Views/Shared/AddNewPopup.cshtml", Model.AddNewForm)
        }

        @*<div class="actions">
                <div class="btn-group">
                    <a class="btn btn-outline dark" data-toggle="modal-extended" href="#responsive"> View Demo </a>
                    <button type="button" class="btn btn-circle blue-hoki btn-outline sbold uppercase">Add</button>
                </div>
            </div>*@
    </div>
    @Html.EditorForModel()
</div>

@section scripts
{
    <script src="/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script src="~/Scripts/app/data-tables.js" type="text/javascript"></script>
    <script>

        $(TableDatatablesAjax.init("/@ViewBag.Controller/List", @Html.CreateColumnsInfo(ViewData.ModelMetadata.Properties, true, (string)ViewBag.Controller)));
        //$(TableDatatablesAjax.init("/ShopType/List", @Html.CreateColumnsInfo(ViewData.ModelMetadata.Properties, Model.EditUrl, Model.DeleteUrl)));
    </script>
}

