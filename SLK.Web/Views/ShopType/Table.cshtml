@using SLK.Web.Helpers
@model SLK.Web.Models.ListModel
@{
    ViewBag.Title = "Shop Types List";
}

<div class="portlet light portlet-fit portlet-datatable bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject font-dark sbold uppercase">Shop Types</span>

            <div class="actions">
                <div class="btn-group">
                    <button type="button" class="btn btn-circle blue-hoki btn-outline sbold uppercase">Add</button>                  
                </div>
            </div>
    </div>
    @Html.EditorForModel()
</div>

@section scripts
{
    <script src="~/Scripts/app/data-tables.js" type="text/javascript"></script>
    <script>
        $(TableDatatablesAjax.init("/ShopType/List", @Html.CreateColumnsInfo(ViewData.ModelMetadata.Properties, true)));
    </script>
}





