@using SLK.Web.Helpers
@model SLK.Web.Models.ListModel
@{
    ViewBag.Title = "CategoryTable";
}

<div class="portlet light portlet-fit portlet-datatable bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-settings font-dark"></i>
            <span class="caption-subject font-dark sbold uppercase">Categories</span>
        </div>        
    </div>    
    @Html.EditorForModel()
</div>

@section scripts
{
    <script src="~/Scripts/app/data-tables.js" type="text/javascript"></script>
    <script>
        $(TableDatatablesAjax.init("/Category/List", @Html.CreateColumnsInfo(ViewData.ModelMetadata.Properties, true)));
    </script>
}

